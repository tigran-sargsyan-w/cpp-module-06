# **************************************************************************** #
#                                Makefile (C++)                                #
# **************************************************************************** #

NAME     := convert
CXX      := c++
CXXFLAGS := -Wall -Wextra -Werror -std=c++98 -g3

OBJ_DIR  := obj/

SRCS     := main.cpp \
          ScalarConverter.cpp

OBJS     := $(SRCS:%.cpp=$(OBJ_DIR)%.o)
DEPS     := $(SRCS:%.cpp=$(OBJ_DIR)%.d)

# **************************************************************************** #
#                                 Build Rules                                  #
# **************************************************************************** #

all: $(NAME)
	@echo "ðŸ”¥ $(NAME) built successfully!"

$(NAME): $(OBJS)
	@$(CXX) $(CXXFLAGS) $(OBJS) -o $@
	@echo "âœ… $(NAME) object files compiled."
	@echo "ðŸš€ $(NAME) created!"

$(OBJ_DIR)%.o: %.cpp
	@mkdir -p $(dir $@)
	@$(CXX) $(CXXFLAGS) -MMD -MP -c $< -o $@

clean:
	@rm -rf $(OBJ_DIR)
	@echo "ðŸ—‘ï¸ $(NAME) object files removed."

fclean: clean
	@rm -f $(NAME)
	@echo "ðŸ˜’ $(NAME) and binary removed."

re: fclean all

-include $(DEPS)

.PHONY: all clean fclean re
.DELETE_ON_ERROR:
